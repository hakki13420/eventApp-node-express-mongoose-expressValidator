<%- include('../partials/header') -%>    
<%- include('../partials/navbar') -%> 
<div class="container">   
    
    <div class="card mt-3">
        <div class="card-header">
            <h4>Event addition</h4>
        </div>
        <div class="card-body">
            <form action="/events" method="post">
                <input  type="text" 
                        name="title" 
                        value="<%= req.body.title %>"
                        class="form-control mb-1" 
                        placeholder="title"
                    >                
                <%- include('./messages') -%>                 
                <input  type="text" 
                        name="description" 
                        value="<%= req.body.description %>"
                        class="form-control mb-1" 
                        placeholder="description"
                >
                <%- include('./messages') -%>                 
                
                <input  type="text" 
                        name="location" 
                        value="<%= req.body.location %>"
                        class="form-control mb-1" 
                        placeholder="location"
                >                
                <%- include('./messages') -%>                 
                
                <input  type="date" 
                        name="date" 
                        value="<%= req.body.date %>"
                        class="form-control mb-1" 
                        placeholder="ddate"
                >                
                <%- include('./messages') -%>                 
                
            </div>
            <div class="card-footer">
                <button type="submit" class="btn bt btn-primary">Create</button>
            </div>
        </form>
    </div>
</div>
