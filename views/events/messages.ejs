
<% if(locals.message && locals.message!="") { %>
    <div class="alert alert-success mt-3">
        <%= message %>
    </div>
<% } %>





<% if( locals.errors != undefined) { %>
    <% if( errors.filter(el=>el.param==='title').length!=0) { %>
        <span class="text-danger">
            <%= errors.filter(el=>el.param==='title')[0].msg %>
        </span>
    <% } %>
<% } %>


