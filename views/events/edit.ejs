<%- include('../partials/header') -%>    
<%- include('../partials/navbar') -%> 
<div class="container">
    <div class="card">
        <div class="card-header">
            <h4>Event edition</h4>
        </div>
        <div class="card-body">
            <form action="/events/Update/<%= event.id %>" method="post">
                <input  type="text" 
                        name="title" 
                        value="<%= event.title %>"
                        class="form-control mb-2" 
                        placeholder="title"
                >
                <input  type="text" 
                        name="description" 
                        value="<%= event.description %>"
                        class="form-control" 
                        placeholder="description"
                >
                <input  type="text" 
                        name="location" 
                        value="<%= event.location %>"
                        class="form-control" 
                        placeholder="location"
                >                
                <input  type="date" 
                        name="date" 
                        value="<%= event.date.toLocaleDateString('en-CA') %>"
                        class="form-control" 
                        placeholder="ddate"
                >                
            </div>
            <div class="card-footer">
                <button type="submit" class="btn bt btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>
